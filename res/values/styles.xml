<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/baseColor</item>
    </style>

    <style name="ListItemTextStyle">
        <item name="android:textColor">@color/baseColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="TitleText" parent="@style/ListItemTextStyle">
        <item name="android:textSize">27sp</item>
    </style>
    
    <style name="DetailsTextStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BtnStyle">
        <item name="android:background">@color/baseColor</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>