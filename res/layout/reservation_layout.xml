<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/restourantImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/restourantImage"
        android:layout_toEndOf="@+id/restourantImage"
        android:text="test"
        style="@style/ListItemTextStyle"
        android:textSize="25sp" />
    
    <TextView 
        android:id="@+id/TV_reservation_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeName"
        android:layout_toRightOf="@+id/restourantImage"
        android:layout_toEndOf="@+id/restourantImage"
        android:text="On: "
        style="@style/DetailsTextStyle" />
    
    <TextView
        android:id="@+id/reservationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeName"
        android:layout_toRightOf="@+id/TV_reservation_name_label"
        android:layout_toEndOf="@+id/TV_reservation_name_label"
        android:text="Medium Text"
        style="@style/DetailsTextStyle" />
    
    <TextView 
        android:id="@+id/TV_reservation_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/peopleNumber"
        android:layout_toLeftOf="@+id/date"
        android:layout_toStartOf="@+id/date"
        android:text="Date: "
        style="@style/DetailsTextStyle"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/peopleNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Small Text"
        style="@style/DetailsTextStyle"
        android:textSize="14sp" />
    
    <TextView 
        android:id="@+id/TV_reservation_number_of_people_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restourantImage"
        android:layout_toLeftOf="@+id/peopleNumber"
        android:layout_toStartOf="@+id/peopleNumber"
        android:text="People: "
        style="@style/DetailsTextStyle"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/peopleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restourantImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Small Text"
        style="@style/DetailsTextStyle"
        android:textSize="14sp" />
</RelativeLayout>
